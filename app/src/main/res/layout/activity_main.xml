<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.libvirus.application.MainActivity">


    <com.libvirus.application.view.RoundImaveView
        android:id="@+id/my_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/a2">

    </com.libvirus.application.view.RoundImaveView>

    <com.libvirus.application.view.CircleImageView
        android:id="@+id/my_image2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/my_image"
        android:src="@drawable/a2"
        app:civ_border_color="#ffaaff"
        app:civ_border_width="3dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_image2"
        android:src="@drawable/a1" />


</RelativeLayout>
